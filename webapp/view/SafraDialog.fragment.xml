<core:FragmentDefinition
   xmlns="sap.m"
   xmlns:core="sap.ui.core">
   <Dialog
		id="SafraDialog"
		title="{view>/titulo}"
		class="sapUiSmallMargin">
   	
   		<VBox id="vBoxSafra" class="sapUiSmallMargin">
			<Label text="Descrição:" labelFor="descricao"/>
			<Input value="{Descricao}" id="descricao" required="true"/>
			
			<Label text="Inativa:" labelFor="inativa"/>
			<Checkbox selected="{Inativa}" id="inativa"/>
		</VBox>
		
   		
   		<buttons>
   			<Button text="Salvar" press="onSaveDialog"/>
   			<Button text="Fechar" press="onCloseDialog"/>
   		</buttons>
   </Dialog>
</core:FragmentDefinition>