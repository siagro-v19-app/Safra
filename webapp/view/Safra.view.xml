<mvc:View
controllerName="br.com.idxtecSafra.controller.Safra"
xmlns:html="http://www.w3.org/1999/xhtml"
xmlns:mvc="sap.ui.core.mvc"
displayBlock="true"
xmlns="sap.m"
xmlns:t="sap.ui.table">
	<App>
		<pages>
			<Page>
				<content>
					<t:Table id="tableSafra"
						rows="{path: '/Safras'}"
						alternateRowColors="true">
						<t:toolbar>
							<Toolbar>
								<Title text="Lista de safras"/> 
							</Toolbar>
						</t:toolbar>
						<t:columns>
							<t:Column filterProperty="Descricao" sortProperty="Descricao">
								<Label text="Descrição"/>
								<t:template>
									<Text text="{Descricao}"/>
								</t:template>
							</t:Column>
							<t:Column filterProperty="Inativa" sortProperty="Inativa">
								<Label text="Inativa"/>
								<t:template>
									<Checkbox selected="{Inativa}" editable="false"/>
								</t:template>
							</t:Column>
						</t:columns>
					</t:Table>
				</content>
				<footer>
					<Toolbar>
						<Button id="refresh" icon="sap-icon://refresh" press="onRefresh"/>
						<ToolbarSpacer/>
						<Button id="incluir" text="Incluir novo" press="onIncluir"/>
						<Button id="editar" text="Editar" press="onEditar"/>
						<Button id="remover" text="Remover" press="onRemover"/>
					</Toolbar>
				</footer>
			</Page>
		</pages>
	</App>
</mvc:View>